{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flash and Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/CavemanController.elf",
            "MIMode": "gdb",
            "cwd": "${workspaceRoot}",
            "stopAtConnect": true,
            "stopAtEntry": true,
            "externalConsole": false,
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "setupCommands": [
                {
                    "description": "Connect to OpenOCD",
                    "text": "target extended-remote localhost:3333",
                    "ignoreFailures": false
                },
                {
                    "description": "Flash program",
                    "text": "load ${workspaceFolder}/build/Debug/CavemanController.elf",
                    "ignoreFailures": false
                },
                {
                    "description": "Reset and halt",
                    "text": "monitor reset halt",
                    "ignoreFailures": false
                }
            ]
        },
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/CavemanController.elf",
            "MIMode": "gdb",
            "cwd": "${workspaceRoot}",
            "stopAtConnect": true,
            "stopAtEntry": true,
            "externalConsole": false,
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "setupCommands": [
                {
                    "description": "Connect to OpenOCD",
                    "text": "target extended-remote localhost:3333",
                    "ignoreFailures": false
                },
                {
                    "description": "Reset and halt",
                    "text": "monitor reset halt",
                    "ignoreFailures": false
                }
            ]
        }
    ]
}